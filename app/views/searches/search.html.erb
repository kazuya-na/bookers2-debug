<h2>Results index</h2>

<table class="table table-hover table-inverse">
 <% if @range == "User" %>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <% else %>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <% end %>
 <% if @range == "User" %>
  <tbody>
   <% @users.each do |user| %>
    <tr>
     <td><%= image_tag user.get_profile_image, size:'100x100' %></td>
     <td><%= user.name %></td>
     <td><%= link_to 'Show', user %></td>
    </tr>
   <% end %>
  </tbody>
 <% else %>
  <tbody>
   <% @books.each do |book| %>
    <tr>
     <td><%= image_tag book.user.get_profile_image, size:'100x100' %></td>
     <td><%= link_to book.title, book_path(book.id) %></td>
     <td><%= book.body %></td>
    </tr>
   <% end %>
  </tbody>
 <% end %>
</table>